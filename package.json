{
  "name": "kindle-book-maker",
  "author": "Errol Hsu",
  "description": "spider & build eBook",
  "version": "1.0.3",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "build": {
    "appId": "com.electron.kindleBookMaker",
    "productName": "kindle-book-maker",
    "copyright": "Copyright Â© 2019 ErrolHsu",
    "directories": {
      "output": "./releases/${platform}-${version}"
    },
    "mac": {
      "target": "zip",
      "files": [
        "!after_all_artifact_build.js",
        "!__tests__/**/*",
        "!releases/**/*",
        "!dist/**/*",
        "!logs/**/*.txt",
        "!logs/*.txt",
        "!yarn-error.log",
        "!README.md",
        "!permission.json",
        "!dev-app-update.yml",
        "!dev-app-update.yml.example",
        "!tmp/*"
      ],
      "extraFiles": [
        {
          "from": "./src/main/book_maker/scaffold",
          "to": "extra_files/scaffold"
        },
        {
          "from": "./src/main/book_maker/template",
          "to": "extra_files/template"
        },
        {
          "from": "./bin",
          "to": "extra_files/bin"
        }
      ]
    },
    "win": {
      "target": "zip",
      "files": [
        "!after_all_artifact_build.js",
        "!__tests__/**/*",
        "!releases/**/*",
        "!dist/**/*",
        "!logs/**/*.txt",
        "!logs/*.txt",
        "!yarn-error.log",
        "!README.md",
        "!permission.json",
        "!dev-app-update.yml",
        "!dev-app-update.yml.example",
        "!tmp/*"
      ],
      "extraFiles": [
        {
          "from": "./src/main/book_maker/scaffold",
          "to": "extra_files/scaffold"
        },
        {
          "from": "./src/main/book_maker/template",
          "to": "extra_files/template"
        },
        {
          "from": "./bin",
          "to": "extra_files/bin"
        }
      ]
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.17",
    "@fortawesome/free-solid-svg-icons": "^5.8.1",
    "@fortawesome/vue-fontawesome": "^0.1.6",
    "alertifyjs": "^1.11.2",
    "cheerio": "^1.0.0-rc.2",
    "convict": "^4.4.1",
    "electron-log": "^3.0.1",
    "fs-extra": "^7.0.1",
    "jszip": "^3.2.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.23",
    "node-opencc": "^2.0.1",
    "puppeteer-core": "^1.12.2",
    "source-map-support": "^0.5.10",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "electron": "4.0.1",
    "electron-builder": "20.38.4",
    "electron-webpack": "^2.6.2",
    "electron-webpack-vue": "^2.2.3",
    "vue": "^2.6.4",
    "webpack": "4.28.4"
  }
}
